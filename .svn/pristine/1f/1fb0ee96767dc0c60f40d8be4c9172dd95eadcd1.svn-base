<script type="text/javascript">
    apiready = function(){
    	var header = document.querySelector('header');
		$api.fixStatusBar(header);
		//var headerH=$api.offset(header).h;  
		
		
    	//给 查看全部车辆绑定点击事件
    	var all_car=$api.dom('.allcar');
		$api.addEvt(all_car, 'click', function(){
			api.openWin({
	            name: 'all_car',
	            url: 'html/allcar.html',
	            useWKWebView:true,
	            historyGestureEnabled:true,
	            animation:{
	            	type:'ripple',   
    				duration:1000 
	            }
            });
		
		});
		
		//给每个图文列表绑定点击事件
		var allcar_list=$api.domAll('.car_list');
		for(var i=0;i<allcar_list.length;i++){
			(function(){      
		    var p = i  ; 
		    var hid=$api.dom(allcar_list[p],'.hid');
		    $api.addEvt(allcar_list[i], 'click', function(){       
		   		var hid=$api.dom(allcar_list[p], '.hid'); 
		    
		     api.openWin({
			    name: 'car',
			    url: 'html/car.html',
			    useWKWebView:true,
	            historyGestureEnabled:true,
	            animation:{
	            	type:'flip',   
    				duration:400 
	            },
			    pageParam: {
			        hid:$api.text(hid),
			    }
			});
		      
		        
		    } ) 
		  })();  
		}
		//other_item 项目  收藏 历史等被点击
		var all_other=$api.domAll('.other_item div');
		for(var i=0;i<all_other.length;i++){
			(function(){  
			 	var p = i  ;   
				$api.addEvt(all_other[i], 'click', function(){
					api.openWin({
			            name: 'other_item',
			            url: 'html/other_item.html',
			            useWKWebView:true,
			            historyGestureEnabled:true,
			            animation:{
			            	type:'un_curl',   
		    				duration:400 
			            },
			            pageParam:{
			            	index:p
			            }
		            });
				});
		  	})();  
		}
		
		
};
</script>
